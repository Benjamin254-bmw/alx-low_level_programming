CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm
CFLAGS = -Wall -Werror -Wextra -pedantic
ifneq ("$(wildcard m.h)", "")
all : $(OBJ)
	$(CC) $^ -o $(NAME)

.PHONY: clean oclean fclean re
clean:
	$(RM) *~ $(NAME)

oclean: 
	$(RM) $(OBJ)

fclean: clean oclean

re: oclean all
endif
